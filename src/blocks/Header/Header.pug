mixin Header(modifier)
  header.Header&attributes(attributes)
    .Header__container.container
      .Header__content
        .Header__left
          .Header__left-block
            .Header__burger.jsBurger
              span.jsBurgerItem
            a(href="/").Header__logo
                include img/logo.svg
          .Header__menu
            +Menu('УСЛУГИ','АБОНЕМЕНТЫ','ПОЧЕМУ МЫ','ОБОРУДОВАНИЕ','АКЦИИ','FAQ','КОНТАКТЫ')
        .Header__right
          .Header__button 
            +ClipButton('ОСТАВИТЬ ЗАЯВКУ')